    <script>

        function submit() {

            // Get email & name from the form
            var email = document.getElementById('email');
            var name = document.getElementById('name');

            var params = "email=" + email.value + "&name=" + name.value;

            var url = 'http://pundit-nyt-reader.herokuapp.com/signup';
            var req = new XMLHttpRequest();
            req.open('POST', url, false);

            req.addEventListener('load', function() {
              if (req.status >= 200 && req.status < 400) {
                var messages = req.responseText;

                // Get alert div
                alert = document.getElementById('alert');
                console.log(messages);

                if (messages == 'true') {
                    alert.textContent = "Thanks for signing up! We'll send you updates!"
                } else if (messages == 'false') {
                    alert.textContent = "Uh oh! Please fill in a proper email and name!"
                }
              } else {
                console.log('status error');
              }
            });

            req.addEventListener('error', function(e) {
              console.log("error");
              // document.body.appendChild(document.createTextNode('uh-oh, something went wrong ' + e));
            });

            req.setRequestHeader("Content-type","application/x-www-form-urlencoded");
            req.send(params);

        }

        var button = document.getElementById('submit_button');
        button.addEventListener("click", submit);

    </script>

